@model Grupo1.AgendaDeTurnos.Models.Centro

@{
    ViewData["Title"] = "Centro";
}

<h1>Crear @($"{ this.ViewData["Title"] }") </h1>

<hr />

<form asp-action="Create">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" class="form-control" requiered  autofocus />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-row">
            <div class="form-group col-md-9">
                <label asp-for="Direccion.Calle" class="control-label"></label>
                <input name="calle" class="form-control" requiered />
                <span asp-validation-for="Direccion.Calle" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Direccion.Altura" class="control-label"></label>
                <input name="altura" type="number" class="form-control" requiered />
                <span asp-validation-for="Direccion.Altura" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">           
            <div class="form-group col-md-6">
                <label asp-for="Direccion.Localidad" class="control-label"></label>
                <input name="localidad" class="form-control" requiered />
                <span asp-validation-for="Direccion.Localidad" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Direccion.Provincia" class="control-label"></label>
                <input name="provincia" class="form-control" requiered />
                <span asp-validation-for="Direccion.Provincia" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <input type="submit" value="Crear Centro" class="btn btn-primary" />
        </div>
</form>


<div>
    <a asp-action="Index">Volver</a>
</div>


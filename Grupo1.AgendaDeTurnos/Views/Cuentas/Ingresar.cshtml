@{
    ViewData["Title"] = "Ingresar";
}

<div class="text-center">
    <h1>Bienvenido</h1>
</div>

<hr />


<div class="row bounceIn bounceInLeft">
    <div class="col-lg-offset-4 col-md-4">
        <form method="post" asp-action="Ingresar">

            <input type="hidden" value="@ViewBag.ReturnUrl" name="returnUrl" />
            <div class="text-danger">
                @ViewBag.Error
            </div>
            <div class="form-group">
                <label laber-for="username" class="control-label">Nombre de usuario:</label>
                <input name="username" class="form-control" type="text" value="@ViewBag.Username" />
            </div>

            <div class="form-group">
                <label label-for="Password" class="control-label">Contraseña:</label>
                <input name="password" class="form-control" type="password" />
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success btn3d" />
            </div>
        </form>
        <a type="button" class="btn btn-info btn3d" asp-area="" asp-controller="Cuentas" asp-action="Registrar">
            Registrarse
        </a>
    </div>

    <div>
        <p>Para ingresar como paciente: user: duki pass:goku</p>
        <p>Para ingresar como paciente2: user: elpacienT pass:soyPaciente</p>
        <p>Para ingresar como profesional: user: elprofe pass:soyProfe</p>
        <p>Para ingresar como aministrador: user: soyadmin pass:soyadmin</p>
    </div>
</div>